<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="5dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/Product_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/Product_image_card"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/Product_name_card"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/Product_price_card"
            android:layout_below="@id/Product_image_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Product Price"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/Product_description_card"
            android:layout_below="@id/Product_price_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>