<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalOrder">

    <TextView
        android:id="@+id/final_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="25dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Pleas write your shipment details"/>

    <EditText
        android:id="@+id/final_shipment_name_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="your name"


        />
    <EditText
        android:id="@+id/final_shipment_phone_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_shipment_name_1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="your phone number"


        />

    <EditText
        android:id="@+id/final_shipment_Address_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_shipment_phone_1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="your home address"


        />

    <EditText
        android:id="@+id/final_shipment_city_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_shipment_Address_1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="your city name"


        />

    <Button
        android:id="@+id/final_shipment_btton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:textSize="20dp"
        android:background="@drawable/button1"
        android:textColor="@android:color/white"
        android:layout_margin="20dp"/>


</RelativeLayout>